---
layout: null
redirect_from: "/feed"
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:3 %}
      <item>
        <title>{% if post.link %}{{ post.title | xml_escape }}{% if post.subtitle %}: {{ post.subtitle | xml_escape }}{% endif %}<![CDATA[ &rArr;]]>{% else %}{{ post.title | xml_escape }}{% if post.subtitle %}: {{ post.subtitle | xml_escape }}{% endif %}{% endif %}</title>
        <author>{% if post.author %}{{ post.author | array_to_sentence_string }}{% else %}Erik Hess{% endif %}</author>
        <description>{% if post.banner %}<![CDATA[<img src="{{ site.url}}/assets/img/{{ post.banner }}"/><p>{{ post.caption | markdownify }}</p>]]>{% endif %}{% if post.layout contains 'episode' %}<![CDATA[<div class="show-meta"><div class="player"><iframe frameborder='0' height='36px' scrolling='no' seamless src='https://simplecast.com/e/{{ post.simplecast }}?style=dark' width='100%'></iframe></div><div class="links"><a href="{{ site.url }}/itunes.xml">Subscribe</a> :: <a href="https://dts.podtrac.com/redirect.mp3/audio.simplecast.com/{{ post.simplecast }}.mp3" title="Seasons {{ title }}">Download</a> :: <a href="{{ page.twitter }}">Twitter-friendly Link</a></div>
      </div>]]>{% endif %}{{ post.content | xml_escape }}{% if post.layout contains "post" %}<![CDATA[<div class="comment-link"><a href="https://github.com/themindfulbit/difficulties.github.io/issues/new">Leave a Comment</a></div>]]>{% endif %}</description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{% if post.link %}{{ post.link }}{% else %}{{ post.url | prepend: site.baseurl | prepend: site.url }}{% endif %}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
