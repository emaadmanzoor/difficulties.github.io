---
layout: null
redirect_from: "/micro"
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }} :: Micro</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:3 %}
      <item>
        {% unless post.layout contains 'micro' %}
        <title>{{ post.title | xml_escape }}{% if post.subtitle %}: {{ post.subtitle | xml_escape }}{% endif %}</title>
        {% endunless %} 
        <author>{% if post.author %}{{ post.author | array_to_sentence_string }}{% else %}Erik Hess{% endif %}</author>
        <description>{% if post.banner %}<![CDATA[<figure><img src="{{ site.url}}/assets/img/{{ post.banner }}"/><figcaption>{{ post.caption | markdownify }}</figcaption></figure>]]>{% endif %}{% if post.layout contains 'micro' %}{{ post.content | xml_escape }}{% endif %}<![CDATA[<div class="permalink"><a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">///</a></div>]]><![CDATA[<figure><img src="{{ site.url}}/assets/theme/rss.jpg?utm_source=RSS&utm_medium=RSS&utm_campaign=RSS%20Reader"/><figcaption>]]></description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{% if post.link %}{{ post.link }}{% else %}{{ post.url | prepend: site.baseurl | prepend: site.url }}{% endif %}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
